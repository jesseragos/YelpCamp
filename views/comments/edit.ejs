<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="text-center">Edit Comment</h1>
    
        <div style="width: 30%; margin: 0 auto;">
            <!-- Form -->
            <form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST"> 
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Comment text" value="<%=comment.text%>" required>
                </div>
                    
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            
            <!-- Back Navigation -->
            <a href="/campgrounds/<%=campground_id%>">Go back</a>
            
        </div>
        
    </div>
</div>

<% include ../partials/footer %>